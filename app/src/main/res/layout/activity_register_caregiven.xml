<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_caregiven"
    android:background="@drawable/registerimg">
    <LinearLayout
        android:id="@+id/line2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cinsert_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="REG"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="bold" />
        <View
            android:background="#fff"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/cupdate_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="UPDATE"
            android:textColor="#FFF"
            android:textSize="12.2sp"
            android:textStyle="bold" />
        <View
            android:background="#fff"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/cdelete_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="DELETE"
            android:textColor="#FFF"
            android:textSize="12.5sp"
            android:textStyle="bold" />

        <View
            android:background="#fff"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/crefresh_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="VIEW"
            android:textColor="#FFF"
            android:textSize="12.5sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/cdata_list_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:background="@color/orange"
        android:gravity="center"
        android:padding="12dp"
        android:text="Caregiver Profile"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/call_data_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cdata_list_count"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="16sp" />

</RelativeLayout>